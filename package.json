{
  "name": "sas-github-guidelines",
  "version": "1.0.0",
  "description": "SAS株式会社 GitHub運用ガイドライン - コミット規約バリデーションツール",
  "main": "index.js",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",
    "commit:retry": "cz --retry",
    "lint:commit": "commitlint --edit",
    "lint:commit-last": "commitlint --from=HEAD~1",
    "validate:commit": "./scripts/validation/validate-commit-message.sh",
    "setup:hooks": "./scripts/setup/install-hooks.sh",
    "setup:dev": "npm install && npm run setup:hooks",
    "test:commit": "echo 'feat(test): テストコミットメッセージ' | commitlint",
    "docs:commit": "echo 'コミット規約についてはCOMMIT_CONVENTION_GUIDE.mdを参照してください'"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "commit-msg": "./scripts/commit-hooks/commit-msg $1"
    }
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/cz-commitlint": "^17.7.1",
    "commitizen": "^4.3.0",
    "husky": "^8.0.3"
  },
  "keywords": [
    "commit",
    "conventional-commits",
    "git-hooks",
    "commitlint",
    "validation",
    "sas",
    "guidelines"
  ],
  "author": "エス・エー・エス株式会社",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sas-com/github-guidelines.git"
  },
  "bugs": {
    "url": "https://github.com/sas-com/github-guidelines/issues"
  },
  "homepage": "https://github.com/sas-com/github-guidelines#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}