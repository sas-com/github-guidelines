#!/bin/bash

# SAS Commit Message Validation Hook
# Validates commit messages against Conventional Commits specification
# with SAS-specific rules and types

set -e

COMMIT_MSG_FILE="$1"
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Configuration
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VALIDATOR_SCRIPT="$SCRIPT_DIR/../validation/validate-commit-message.sh"

# Check if validator exists
if [[ ! -f "$VALIDATOR_SCRIPT" ]]; then
    echo -e "${RED}Error: バリデータースクリプトが見つかりません${NC}" >&2
    echo -e "${YELLOW}Expected: $VALIDATOR_SCRIPT${NC}" >&2
    exit 1
fi

# Skip validation for merge commits, revert commits, or fixup commits
if echo "$COMMIT_MSG" | grep -qE "^(Merge|Revert|fixup!|squash!)"; then
    echo -e "${BLUE}Info: 特別なコミット形式のためバリデーションをスキップします${NC}"
    exit 0
fi

# Skip validation if commit message is empty (will be caught by git anyway)
if [[ -z "$(echo "$COMMIT_MSG" | tr -d '[:space:]')" ]]; then
    echo -e "${RED}Error: コミットメッセージが空です${NC}" >&2
    exit 1
fi

# Run the validator
echo -e "${BLUE}コミットメッセージをバリデーション中...${NC}"

if "$VALIDATOR_SCRIPT" "$COMMIT_MSG_FILE"; then
    echo -e "${GREEN}✓ コミットメッセージが規約に適合しています${NC}"
    exit 0
else
    echo -e "${RED}✗ コミットメッセージが規約に適合していません${NC}" >&2
    echo -e "${YELLOW}詳細な規約については以下を参照してください:${NC}" >&2
    echo -e "${YELLOW}  COMMIT_CONVENTION_GUIDE.md${NC}" >&2
    echo -e "${YELLOW}  https://www.conventionalcommits.org/${NC}" >&2
    echo "" >&2
    echo -e "${YELLOW}よくある修正例:${NC}" >&2
    echo -e "${YELLOW}  ❌ update: 機能を修正${NC}" >&2
    echo -e "${YELLOW}  ✅ fix(api): レスポンス形式エラーを修正${NC}" >&2
    echo "" >&2
    echo -e "${YELLOW}  ❌ feat: 新機能追加しました${NC}" >&2
    echo -e "${YELLOW}  ✅ feat(auth): OAuth2.0ログイン機能を追加${NC}" >&2
    exit 1
fi