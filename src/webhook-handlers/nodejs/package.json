{
  "name": "@sas-com/github-webhook-security-server",
  "version": "1.0.0",
  "description": "エンタープライズ級GitHub Webhookセキュリティサーバー",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:security": "npm audit && snyk test",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "docker:build": "docker build -t sas-com/webhook-nodejs .",
    "docker:run": "docker run -p 3000:3000 sas-com/webhook-nodejs",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "keywords": [
    "github",
    "webhook",
    "security",
    "enterprise",
    "typescript",
    "nodejs",
    "sas-com"
  ],
  "author": {
    "name": "SAS GitHub管理チーム",
    "email": "github@sas-com.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sas-com/github-guidelines.git"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "winston-elasticsearch": "^0.17.4",
    "prometheus-client": "^1.0.1",
    "prom-client": "^14.2.0",
    "joi": "^17.9.2",
    "ip-cidr": "^3.1.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0",
    "dotenv": "^16.3.1",
    "node-cache": "^5.1.2",
    "ioredis": "^5.3.2",
    "mysql2": "^3.6.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/uuid": "^9.0.2",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "snyk": "^1.1193.0",
    "nodemon": "^3.0.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts",
    "exec": "tsx src/server.ts"
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "no-console": "warn",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "security": {
    "advisories": {
      "ignore": []
    }
  },
  "funding": {
    "type": "corporate",
    "url": "https://sas-com.com"
  }
}